<!--	// SMX // Stealth Bar -->

		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='SMXstatBars']/rect[@name='SMXstealthBar']">
			<label name="TextContent" depth="6" pos="0,-5" text="{statcurrent}" font_size="14" color="[white]" font_face="AgencyB" crispness="Never" effect="outline" justify="center" pivot="topleft" />
		</append>


<!--	// SMX // Health Bar -->

		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='SMXstatBars']/rect[@name='SMXhealthBar']">
			<label name="TextContent" depth="7" pos="0,-14" text="{statcurrentwithmax}" font_size="28" color="[white]" font_face="AgencyB" crispness="Never" effect="outline" justify="center" pivot="topleft" />
		</append>


<!--	// SMX // Stamina Bar -->

		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='SMXstatBars']/rect[@name='SMXstaminaBar']">
			<label name="TextContent" depth="7" pos="0,-16" text="{statcurrentwithmax}" font_size="28" color="[white]" font_face="AgencyB" crispness="Never" effect="outline" justify="center" pivot="topleft" />
		</append>


<!--	// SMX // Hunger Bar -->

		<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='SMXwellnessBars']/rect[@name='SMXhungerBar']">
			<label name="TextContent" depth="6" pos="0,-63" text="{playerfood}" font_size="22" color="[white]" font_face="AgencyB" crispness="Never" effect="outline" justify="center" pivot="topleft" controller="PlayerStatsWindow" />
		</append>


<!--	// SMX // Thirst Bar -->

